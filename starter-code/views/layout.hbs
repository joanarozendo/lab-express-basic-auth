<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/styles/style.css' />
  </head>
  <body>

    <nav>
      <a href="/">Home</a>
      {{#if user}}
        <a href="/profile/{{user._id}}">{{user.username}}'s Profile</a>
        <form action="/sign-out" method="POST">
          <button>Sign Out</button>
        </form>
        {{else}}
        <a href="/login">Login</a>
        <a href="/sign-up">Sign Up</a>
      {{/if}}
    </nav>

    {{{body}}}

  </body>
</html>
